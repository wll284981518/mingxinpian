/* pages/card/card.wxss */
/* 名片最大盒子 */
.wll_card {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  background: #fafafa;
}

/* 轮播图  */
#wll_Swiper>image {
  width: 100%;
  height: 400rpx;
}

/* 名信片 */
.wll_information {
  width: 85%;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.5);
  background: #fff;
  padding: 20rpx;
  font-size: 30rpx;
  margin: -60rpx auto 0;
  z-index: 1;
}

.wll_information>text {
  font-size: 40rpx;
  font-weight: bold;
}

.wll_information>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wll_information>view>view {
  width: 84%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wll_information>view>view>button {
  width: 120rpx;
  height: 70rpx;
  font-size: 30rpx;
  padding: 0;
  margin: 0;
  min-height: 0;
  line-height: 60rpx;
  border: 2rpx solid #ccc;
}

.wll_information>view:nth-of-type(1) {
  padding: 10rpx 0 20rpx 0;
}

.wll_information>view:nth-of-type(2) {
  padding: 0 0 20rpx 0;
}

/* 展示区 */
.wll_behavior {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 40rpx 0 20rpx 0;
  font-size: 30rpx;
}

.wll_behavior>view {
  width: 33.3%;
  text-align: center;
}

.wll_behavior view image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.wll_behavior view text {
  display: block;
  font-weight: normal;
}
.wll_behavior view button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  background-color:  #fafafa;
  color: black;
}
.wll_behavior view .button-hover {
  background-color:  #fafafa;
  color: black;
  
}
.wll_Logo {
  width: 100%;
  background: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.wll_Logo image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}

.wll_Logo text{
  font-size: 30rpx;
}